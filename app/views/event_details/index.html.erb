<div class="page">
  <div class="hero" id="event-details" style="height:790px;">
  </div>
  <div class="holder-of-things">
    <div id="event" style="margin-top:780px;">
      <div class="row event-info">
        <h1>
          Event Information<br/>
          <%= image_tag('swoopy.png') %>
        </h1>
        <p>
          The party will be held at the Santa Fe Farmers' Market Pavillion<br/>
           on<br/>
           Saturday July 11th, 2015.
        </p>
        <div class="event-schedule">
          <h2>6:30</h2>
          <span>Margaritas</span>
          <h2>6:45</h2>
          <span>Bride and Groom arrive</span>
          <h2>7:30</h2>
          <span>BBQ</span>
          <h2>8:00</h2>
          <span>Band starts strumming </span><br/>
          <span>Dancing and toasts to ensue from there</span>
        </div>
      </div>
    </div>
    <section id="lodging" style="margin-top:700px;">
      <div class="row accomodations">
        <h1>
          Accomodations<br/>
          <%= image_tag('swoopy.png') %>
        </h1>
        <div class="hotel-santa-fe col-md-4 col-md-offset-2">
            <p>Hotel Santa Fe</p>
            <p class="hotel">1501 Paseo de Peralta<br/>Santa Fe, NM</p>
            <p class="link">
              <a href ="http://hotelsantafe.com/" target="_blank">View</a>
            </p>
        </div>
        <div class="col-md-3">
          <p>Sage Inn</p>
          <p class="hotel">
            725 Cerrillos Road<br/>Santa Fe, NM
          </p>
          <p class="link">
            <a href ="http://santafesageinn.com/" target="_blank">View</a>
          </p>
        </div>
      </div>
    </section>

    <section id="travel" style="margin-top:700px;">
      <div class="row travel">
        <h1>
          Getting to and from Santa Fe<br/>
          <%= image_tag('swoopy.png') %>
          </h1>
          <div class="row flying">
            <h3>Flying</h3>
            <div class="col-md-4 col-md-offset-2">
              Albuquerque<br/>
            <span> <i>ABQ</i></span>
            </div>

            <div class="col-md-4">
              Santa Fe<br/>
            <span><i>SAF</i></span>
            </div>

          </div>
          <div class="row driving">
            <h3>Driving from Colorado</h3>
            <div class="map-container">
              <div class="col-md-6" id="map-canvas"></div>

              <div class="col-md-6 directions-text">
                <p> Take 1-25 South </p>
                <p>Take exit 284 for NM-466/Old Pecos Tr. </p>
                <p>Turn right onto NM-466 N/Old Pecos Trail (signs for Historic US 66)</p>
                <p>Turn right onto Old Pecos Trail</p>
                <p>Slight left onto Old Santa Fe Trail</p>
              </div>
            </div>
              <script type="text/javascript">

                var directionsDisplay;
                var directionsService = new google.maps.DirectionsService();
                var map;

                function initialize() {
                  directionsDisplay = new google.maps.DirectionsRenderer();
                  var denver = new google.maps.LatLng(39.7392, -104.9903);
                  var mapOptions = {
                    zoom:5,
                    center: denver
                  };
                  map = new google.maps.Map(document.getElementById('map-canvas'), mapOptions);
                  directionsDisplay.setMap(map);
                }

                function calcRoute() {
                  var start = "Denver, CO"
                  var end = "Santa Fe, NM"
                  var request = {
                      origin:start,
                      destination:end,
                      travelMode: google.maps.TravelMode.DRIVING
                  };
                  directionsService.route(request, function(response, status) {
                    if (status == google.maps.DirectionsStatus.OK) {
                      directionsDisplay.setDirections(response);
                    }
                  });
                }

                google.maps.event.addDomListener(window, 'load', initialize);


              </script>
          </div>
      </div>
    </section>

    <section id="santa-fe" style="margin-top:700px;">
      <div class="row travel">
        <h1>
          Santa Fe<br/>
          <%= image_tag('swoopy.png') %>
          </h1>
          What to do in Santa Fe that weekend
        <p class="santa-fe-events">
          <a href="http://www.folkartalliance.org/markets/santa-fe/" target="_blank">International Folk Art Market</a>
        </p>
        <p class="santa-fe-events">
          <a href="http://www.santafefarmersmarket.com/" target="_blank">Santa Fe Farmers' Market (Saturdays 8-12)</a>
        </p>
        <p class="santa-fe-events">
          <a href="http://www.santafeopera.org/calendar/" target="_blank">Santa Fe Opera</a>
        </p>
      </div>
    </section>
  </div>
</div>
